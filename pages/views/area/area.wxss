/* 搜索 */
.home-input-input {
    position: relative;
}

.home-input-input image {
    position: absolute;
    top: 22rpx;
    left: 30rpx;
    width: 22rpx;
    height: 22rpx;
}

.home-input-input input {
    border: 1rpx solid rgba(0, 0, 0, 0.18);
    width: 586rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.18);
    padding: 0 60rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.search {
    font-size: 32rpx;
    font-family: Source Han Sans CN;
    font-weight: 600;
    color: #010101;
    margin-right: 19rpx;
}

.seearchBox {
    align-items: center;
}



/* 推荐商家 */
.merchant {
    margin-top: 38rpx;
}

.merchant-img {
    margin-top: 42rpx;
    width: 670rpx;
    height: 320rpx;
    overflow: hidden;
    border-radius: 14rpx;
    position: relative;
}

.merchant-img image {
    width: 670rpx;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.merchant-cont {
    position: absolute;
    left: 35rpx;
    bottom: 19rpx;
}

.merchant-cont-name {
    font-size: 30rpx;
    font-weight: 400;
    color: #FFFFFF;
}

.merchant-cont-text {
    font-size: 20rpx;
    font-weight: 400;
    color: #FFFFFF;
    margin-top: 27rpx;
}

/* 综合推荐 */
.synthesize {
    margin-top: 99rpx;
}

.synthesize-top image {
    width: 24rpx;
    height: 14rpx;
    margin-top: 16rpx;
    margin-left: 11rpx;
}

.synt {
    margin-right: 41rpx;
}

.synts {
    font-size: 30rpx;
    font-weight: 400;
    color: #000000;
}

.synthesize-cont {
    margin-top: 33rpx;
}



/* 标题公共部分 */
.area-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000000;
    position: relative;
    letter-spacing: 4rpx;
}

/* 公共标题下面的样式 */
.area-title::after {
    content: "";
    position: absolute;
    bottom: -2rpx;
    left: 0;
    width: 95%;
    height: 14rpx;
    background: linear-gradient(90deg, #FECB2D 0%, #FFFFFF 100%);
    border-radius: 7rpx;
    opacity: .8;
}